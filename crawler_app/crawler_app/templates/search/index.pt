<div metal:use-macro="view.layout">
  <div metal:fill-slot="main_content">
    <section class="page-section clearfix">
      <div class="container">

        <div class="intro-text text-center bg-faded p-5 rounded">
          <h2 class="section-heading mb-4">
            <span class="section-heading-upper">Caelum</span>
            <span class="section-heading-lower">New Search</span>
          </h2>

	      <form class="standard-form" action="" method="POST">
          <input name="url" required type="text" placeholder="URL" class="form-control">
          <input name="depth" required type="number" placeholder="Depth Level (From 1 to 20)" class="form-control" min="1" max="20">
	        <input name="keyword" type="text" placeholder="Keyword to terminate search (optional)" class="form-control">

          <div class="btn-group" data-toggle="buttons">
            <label class="btn btn-primary active">
              <input name="search_type" type="radio" value="bfs" autocomplete="off" checked> Breadth-first search
            </label>
            <label class="btn btn-primary">
              <input name="search_type" type="radio" value="dfs" autocomplete="off"> Depth-first search
            </label>
          </div>
          <br />

	        <button type="submit" class="btn btn-primary btn-xl">Search</button>
	      </form>

        </div>
      </div>
    </section>

    <section class="page-section clearfix" tal:condition="previous_searches">
      <div class="container">

        <div class="intro-text text-center bg-faded p-5 rounded">
          <h2 class="section-heading mb-4">
            <span class="section-heading-upper">Caelum</span>
            <span class="section-heading-lower">Previous Search</span>
          </h2>

	      <form class="standard-form" action="" method="POST">
          <div class="form-group">
            <select name="search_id" class="form-control">
              <option tal:repeat="search previous_searches" tal:content="search.url" tal:attributes="value search.id">None</option>
            </select>
          </div>
	        <button type="submit" class="btn btn-primary btn-xl">Search</button>
	      </form>

        </div>
      </div>
    </section>
  </div>
</div>
